<style is:global>
    :root {
        --accent: 123, 31, 237;         /* More vibrant purple */
        --accent-light: 155, 131, 255;  /* Lighter purple */
        --accent-dark: 61, 20, 171;     /* Darker purple */
        --accent-blue: 56, 189, 248;    /* Bright blue */
        --accent-blue-dark: 28, 78, 216; /* Dark blue */
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-blue)) 40%,
            rgb(var(--accent-light)) 70%
        );
        --background-gradient: linear-gradient(
            135deg,
            #16092c 0%,
            #1e0b5e 25%,
            #0f1b48 60%,
            #0a0e29 100%
        );
    }
    html {
        font-family: system-ui, sans-serif;
        background: var(--background-gradient);
    }
    body {
        min-height: 100vh;
        margin: 0;
        position: relative;
        overflow-x: hidden;
    }
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
    
    /* Background logo styling */
    .background-logo {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        max-width: 1200px;
        height: auto;
        z-index: 0;
        opacity: 0.05;
        pointer-events: none;
    }
    
    .base-path {
        fill: rgb(var(--accent-light));
        stroke: rgb(var(--accent-light));
        stroke-width: 1;
    }
    
    .content-wrapper {
        position: relative;
        z-index: 1;
    }
</style>